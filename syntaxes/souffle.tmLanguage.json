{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Souffl√©",
	"author": "Alex Hirsch",
	"scopeName": "source.souffle",
	"fileTypes": [
		"dl"
	],
	"patterns": [
		{
			"include": "#strings"
		},
		{
			"include": "#linecomment"
		},
		{
			"include": "#blockcomment"
		},
		{
			"include": "#rule"
		},
		{
			"include": "#type"
		},
		{
			"include": "#decl"
		},
		{
			"include": "#number"
		},
		{
			"include": "#variable"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#operators"
		}
	],
	"repository": {
		"strings": {
			"name": "string.quoted.double.souffle",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.souffle",
					"match": "\\\\."
				}
			]
		},
		"linecomment": {
			"patterns": [
				{
					"name": "comment.line.double-slash.souffle",
					"match": "//.*$\n?"
				}
			]
		},
		"blockcomment": {
			"patterns": [
				{
					"name": "comment.block.souffle",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"rule": {
			"patterns": [
				{
					"match": "(\\w+)\\s*\\(",
					"captures": {
						"1": {
							"name": "entity.name.function"
						}
					}
				}
			]
		},
		"type": {
			"patterns": [
				{
					"match": "(\\.(symbol_|number_)?type)\\s*(\\w+)",
					"captures": {
						"1": {
							"name": "keyword.souffle"
						},
						"3": {
							"name": "storage.type.souffle"
						}
					}
				}
			]
		},
		"decl": {
			"patterns": [
				{
					"match": "(\\w+)\\s*(:)\\s*(\\w+)",
					"captures": {
						"1": {
							"name": "meta.tag.souffle"
						},
						"2": {
							"name": "keyword.operator.souffle"
						},
						"3": {
							"name": "storage.type.souffle"
						}
					}
				}
			]
		},
		"number": {
			"patterns": [
				{
					"name": "constant.numeric.souffle",
					"match": "\\b-?\\d+(\\.\\d+)?\\b"
				}
			]
		},
		"variable": {
			"patterns": [
				{
					"name": "variable.name.souffle",
					"match": "\\w+"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.souffle",
					"match": "\\.(type|symbol_type|number_tybe|decl|input|output)?"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.souffle",
					"match": "=|\\||:-|\\+|-|\\*|/"
				}
			]
		}
	}
}
